
@if (Session["AdminID"] == null)
{
    Response.Redirect("/Admin/Login");
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewBag.Title</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <meta name=”robots” content=”noindex,nofollow”>
    <link href="~/Content/NiceAdmin/assets/img/favicon.png" rel="icon">
    <link href="~/Content/NiceAdmin/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/NiceAdmin/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/NiceAdmin/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/NiceAdmin/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/NiceAdmin/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/Content/NiceAdmin/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/Content/NiceAdmin/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Content/NiceAdmin/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Content/NiceAdmin/assets/css/style.css" rel="stylesheet">


</head>

<body>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="/Admin" class="logo d-flex align-items-center">
                <!-- <img src="~/Content/NiceAdmin/assets/img/logo.png" alt="">-->
                <span class="d-none d-lg-block">Admin Paneli</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->



        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">




                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@Session["KullaniciAdi"]</span>
                    </a><!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>Admin</h6>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>



                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="/Admin/Logout">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Çıkış Yap</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link " href="/Admin">
                    <i class="bi bi-house"></i>
                    <span>Ana Sayfa</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/Kategoriler">
                    <i class="bi bi-tag"></i>
                    <span>Kategoriler</span>
                </a>
            </li><!-- End Profile Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/Resimler">
                    <i class="bi bi-camera"></i>
                    <span>Resimler</span>
                </a>
            </li><!-- End F.A.Q Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/Degerlendirmeler">
                    <i class="bi bi-chat-dots-fill"></i>
                    <span>Değerlendirmeler</span>
                </a>
            </li><!-- End F.A.Q Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/Yetkililer">
                    <i class="bi bi-person"></i>
                    <span>Adminler</span>
                </a>
            </li><!-- End Profile Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/Password">
                    <i class="bi bi-gear"></i>
                    <span>Şifre Değiştir</span>
                </a>
            </li><!-- End Profile Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="/AnaSayfa">
                    <i class="bi bi-browser-chrome"></i>
                    <span>Siteye Geri Dön</span>
                </a>
            </li><!-- End Contact Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/Logout">
                    <i class="bi bi-box-arrow-right"></i>

                    <span>Çıkış Yap</span>
                </a>
            </li><!-- End Profile Page Nav -->

        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">
        @RenderBody()

    </main>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
 $(document).ready(function() {
     @if (TempData["Hata"] != null)
     {
         <text>
             Swal.fire({
                 icon: 'error',
                 title: 'HATA!',
                 text: '@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["Hata"].ToString()))'
             });
         </text>
     }

     @if (TempData["Basarili"] != null)
     {
         <text>
             Swal.fire({
                 icon: 'success',
                 title: 'Başarılı!',
                 text: '@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["Basarili"].ToString()))'
             });
         </text>
     }
 });


    </script>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Content/NiceAdmin/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/Content/NiceAdmin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/NiceAdmin/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/Content/NiceAdmin/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/Content/NiceAdmin/assets/vendor/quill/quill.min.js"></script>
    <script src="~/Content/NiceAdmin/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/Content/NiceAdmin/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/Content/NiceAdmin/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/NiceAdmin/assets/js/main.js"></script>

</body>

</html>