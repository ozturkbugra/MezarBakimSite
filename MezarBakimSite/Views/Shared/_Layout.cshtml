<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description">
    <meta name="keywords" content="@ViewBag.Keywords">
    <meta name="robots" content="index,follow">
    <link rel="canonical" href="@Request.Url">
    <script type="application/ld+json">
        {
          "@@context": "https://schema.org/",
          "@@type": "Product",
          "name": "Ankara Mezar Bakımı",
          "image": "",
          "description": "Ankara'da mezar bakımı, çiçeklendirme ve mermer onarım hizmetleri sunuyoruz. Sevdiklerinizin mezarını özenle temizleyip bakımını yapıyoruz.",
          "brand": {
            "@@type": "Brand",
            "name": "Ankara Mezar Bakımı"
          }
        }
    </script>

    <!-- Favicons -->
    <link href="~/Content/UpConstruction/assets/img/favicon.png" rel="icon">
    <link href="~/Content/UpConstruction/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/UpConstruction/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/UpConstruction/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/UpConstruction/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Content/UpConstruction/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/Content/UpConstruction/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Content/UpConstruction/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/Content/UpConstruction/assets/css/main.css" rel="stylesheet">




</head>

<body class="index-page">

    <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

            <a href="/anasayfa" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <img src="~/Content/UpConstruction/assets/img/logo.png" alt="">
                <!--<h1 class="sitename">UpConstruction</h1> <span>.</span> -->
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    @if (Session["Aktif"].ToString() == "Ana Sayfa" )
                    {


                        <li><a href="/anasayfa" class="active">Ana Sayfa</a></li>

                    }
                    else
                    {
                        <li><a href="/anasayfa">Ana Sayfa</a></li>

                    }

                    @if (Session["Aktif"].ToString() == "Hakkımızda")
                    {


                        <li><a href="/hakkimizda" class="active">Hakkımızda</a></li>

                    }
                    else
                    {
                        <li><a href="/hakkimizda">Hakkımızda</a></li>

                    }

                    <li><a href="/anasayfa#constructions">HİZMETLERİMİZ</a></li>

                    @if (Session["Aktif"].ToString() == "Fiyat Listesi")
                    {


                        <li><a href="/fiyat-listesi" class="active">FİYAT LİSTESİ</a></li>

                    }
                    else
                    {
                        <li><a href="/fiyat-listesi">FİYAT LİSTESİ</a></li>

                    }


                    @if (Session["Aktif"].ToString() == "Galeri")
                    {


                        <li><a href="/galeri" class="active">GALERİ</a></li>

                    }
                    else
                    {
                        <li><a href="/galeri">GALERİ</a></li>

                    }


                    @if (Session["Aktif"].ToString() == "İletişim")
                    {


                        <li><a href="/iletisim" class="active">İLETİŞİM</a></li>

                    }
                    else
                    {
                        <li><a href="/iletisim">İLETİŞİM</a></li>

                    }



                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

        </div>
    </header>

    <main class="main">
        @RenderBody()
    </main>


    <footer id="footer" class="footer dark-background mt-3">

        <div class="container footer-top">
            <div class="row gy-4">
                <div class="col-lg-4 col-md-6 footer-about">
                    <a href="/anasayfa" class="logo d-flex align-items-center">
                        <span class="sitename">Gamze Çiçekçilik</span>
                    </a>
                    <div class="footer-contact pt-3">
                        <p>Aşağı Yahyalar, Anadolu Blv no 200</p>
