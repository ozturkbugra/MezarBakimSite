
@{
    ViewBag.Title = "Degerlendirmeler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Degerlendirmeler</h2>



<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#verticalycentered">
    Ekle
</button>


<div class="modal fade" id="verticalycentered" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form action="/Admin/DegerlendirmeEkle" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="text" class="form-control" name="AdSoyad" placeholder="Ad Soyad" maxlength="150" />
                    <br /><br />
                    <input type="text" class="form-control" name="Unvan" placeholder="Unvan" maxlength="150" />
                    <br /><br />
                    Resim
                    <input type="file" name="ResimURL" id="ResimURL" class="form-control" required />
                    <br /> <br />
                    <input type="text" class="form-control" name="Yorum" placeholder="Yorum"/>

                    <br />



                </div>
                <div class="modal-footer">

                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div><!-- End Vertically centered Modal-->



<br />

<div class="card-body">
 

    <div class="table-responsive">
        <table class="table table-borderless table-striped table-hover datatable">
            <thead>
                <tr>
                    <th scope="col">Resim</th>
                    <th scope="col">Ad Soyad</th>
                    <th scope="col">Unvan</th>
                    <th scope="col">Yorum</th>

                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.List)
                {

                    <tr>
                        
                        <td>
                            <img src="@item.ResimURL" style="width:60%" />
                        </td>
                        <td>@item.AdSoyad</td>
                        <td>@item.Unvan</td>
                        <td>@item.Yorum</td>

                        <td>
                            <a href="/Admin/DegerlendirmeSil/@item.ID" class="badge bg-danger" onclick="return confirm('Emin misiniz?')">Sil</a>

                        </td>
                    </tr>
                   
                }

            </tbody>
        </table>
    </div>
</div>
